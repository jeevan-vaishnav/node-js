// OS - Interact with operating system and general
const os = require('os'); // this is the build-in module


// info about current user 
const user = os.userInfo()
console.log(user);
//method returns the system uptime time in seconds
console.log(`The System Uptime is ${os.uptime()} seconds`);

// current os details 
const currentOS = {
    name:os.type(),
    release:os.release(),
    totalMem:os.totalmem(),
    freeMem:os.freemem(),
}
console.log(currentOS)

